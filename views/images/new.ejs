<% include ./partials/header %>
  
  <body>
    
    <% include ./partials/menu %>
    
    <div class="pusher">
      <div class="ui main text container">
        
        <h1 class="ui header">Upload an Image to the server</h1>
        
        <form class="ui form segment">
          <input 
             type="file"
             name="upload"
             accept="image/*"
             id="upload-input"
             style="display: none"
             />

          <a class="ui submit primary button" id="upload-btn">Upload Image</a>

          <p>
            Progress:
          </p>

          <div class="ui progress" data-percent="0" id="uploadProgress">
            <div class="bar">
              <div class="progress"></div>
            </div>
            <div class="label">0%</div>
          </div>
        </form>
        
      </div><!-- ui main text container -->
    
    <% include ../partials/js/default %>
    <script type="text/javascript" src="/scripts/imgUpload.js"></script>

