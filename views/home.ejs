<% page = "home" %>
<% include ./partials/header %>
<%

if (typeof allProjects === "undefined")
{
  allProjects = {};
}

%>
<!--<div class="ui main text container">-->

  <div class="ui main stackable vertically divided grid container">

    <div class="row middle aligned">
      <div class="four wide center aligned column">
        <img class="ui small centered circular image" src="/images/jimmy.vanveen.jpg">
      </div>
      <div class="twelve wide center aligned column">
        <h1 class="ui header" id="name">Jimmy Van Veen</h1>
        <h2 class="ui header" id="tagline">Full stack Web Developer</h2>
        <p>Jimmy is a passionate full stack web developer. He works primarily with Node.js, Express, MongoDB, jQuery, as well as Vanilla CSS, &amp; JavaScript</p>
      </div>
    </div>

    <div class="row">
      
      <div class="six wide column">

        <div class="ui vertical raised fluid menu">
          <div class="header item">
            Associated Resources
          </div>
          <a class="item" href="https://bitbucket.org/JimmayVV/" target="_blank"><i class="bitbucket icon"></i> Bitbucket</a>
          <a class="item" href="https://github.com/JimmayVV" target="_blank"><i class="github icon"></i> GitHub</a>
          <a class="item" href="https://www.linkedin.com/in/JimmyVanVeen" target="_blank"><i class="linkedin icon"></i> LinkedIn</a>
        </div><!-- ui large vertical menu -->

      </div>
      
      <div class="ten wide column">
        <h3 class="ui header">How to get in contact with me?</h3>
        <ul class="ui list">
          <li>Email</li>
          <li>Cell: <a href="tel:6038011131">(603) 801-1131</a></li>
          <li>Contact Page</li>
        </ul>
      </div>
      
    </div><!-- row -->
    
    
    <div class="row">
      <div class="one fluid column">
        
        <h2 class="ui header">Jimmy's Projects:</h2>
        
        <div class="ui three stackable cards">
          <% allProjects.forEach( function(project, index, array) { %>
            <a class="ui raised card" href="/projects/<%= project.shortId%>">
              <div class="image">
                <img src="<%- project.image %>" />
              </div><!-- image -->
              <div class="content">
                <div class="header"><%- project.title %></div>
                <div class="meta">
                  <p>
                    <% if (project.current) { %>
                      This project is <strong>Current</strong> and was started on <%= project.started.toDateString() %>
                    <%
                    } else { %>
                      Project ran from <%= project.started.toDateString() + " to " + project.finished.toDateString() %>
                    <% } %>
                    by <strong><%= project.author.username %></strong>
                  </p>
                </div><!-- meta -->
                <div class="description">
                  <%- project.content %>
                </div><!-- description -->
              </div><!-- content -->
            </a><!-- ui fluid card -->
          <% }); %>
        </div><!-- ui three stackable cards -->
        
      </div><!-- one fluid column -->
    </div><!-- row -->

  </div><!-- ui stackable vertically divided grid -->

<!--</div><!-- ui main text container -->

<% include ./partials/js/default %>
<% include ./partials/js/main %>
<% include ./partials/footer %>