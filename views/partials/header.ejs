<html>
  <head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>Blog Site</title>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css">
    <link href="https://fonts.googleapis.com/css?family=Architects+Daughter" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <%
    var actives = { home: "", register: "", blog: "", login: "" };
    var stylesheet = "";
    var showStylesheet = false;
    var blogDropDown = "";

    // Check if page is defined, and if so, apply the "active" class to the menu links
    if (typeof page !== "undefined")
    {
      stylesheet = '<link rel="stylesheet" type="text/css" href="/stylesheets/'+page+'.css">';

      if (page === "home")
      {
        actives.home = " active"; 
      }

      if (page === "register")
      {
        actives.register = " active";
        showStylesheet = true;
      }

      if (page === "blog")
      {
        actives.blog = " active";
      }

      if (page === "login")
      {
        actives.login = " active";
        showStylesheet = true;
        stylesheet = '<link rel="stylesheet" type="text/css" href="/stylesheets/register.css">';
      }
    }

    if (showStylesheet) { %>
      <%- stylesheet %>
    <% } %>
  </head>
  <body ontouchstart>

  <div class="ui inverted fixed main menu">
    <div class="ui container">
      <div class="header item">
        <i class="code icon"></i>
        Jimmy Van Veen
      </div>
      <a href="/" class="item<%= actives.home %>">Home</a>
      <% if (!currentUser) { %>
        <a href="/blogs" class="item<%= actives.blog %>">Blog</a>
      <% } else { %>
        <div class="ui simple dropdown item">
          Blog <i class="dropdown icon"></i>
          <div class="menu">
            <a class="item" href="/blogs">List All Blogs</a>
            <a class="item" href="/blogs/new">New Blog Post</a>
          </div>
        </div>
      <% } %>

      <div class="right menu">
        <% if (!currentUser) { %>
          <!--<a href="/register" class="item<%= actives.register %>">Register</a>-->
          <a href="/login" class="item<%= actives.login %>">Log In</a>
        <% } else { %>
          <a href="/logout" class="item">Logout</a>
        <% } %>
      </div>
    </div>
  </div>

  <div class="pusher">
    <div class="ui container">
       <% if(error && error.length > 0) { %>
        <div class="ui negative message">
          <%=error %>
        </div>
       <% } %>
       
       <% if(success && success.length > 0) { %>
        <div class="ui positive message">
          <%= success %>
        </div>
       <% } %>
    </div>