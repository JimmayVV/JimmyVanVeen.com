<% page = "register" %>
<% include ./partials/header %>

<div class="ui middle aligned center aligned grid" id="registerPage">
  <div class="column">

    <h2 class="ui header">
      <div class="content">
        Register for an account
      </div>
    </h2>

    <form class="ui large form" action="/register" method="post">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="User Name">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <button class="ui fluid large blue submit button">Register</button>
      </div>

      <div class="ui error message"></div>

    </form>

  </div>
</div>

<% include ./partials/js/default %>
<% include ./partials/footer %>