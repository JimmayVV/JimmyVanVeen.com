<% page = "blog" %>
<% include ../partials/header %>

<div class="ui main text container">
  <h1 class="ui header">Jimmy's Blog</h1>
  
    <div class="ui top attached segment">

      <form action="/blogs" method="post" class="ui form" id="newBlogForm">
        <h3 class="ui header">Make New Blog Post</h3>
        
        <div class="field">
          <label>Blog Title</label>
          <input type="text" name="title" placeholder="Blog Title" required autofocus>
        </div>
        
        <div class="field">
          <label>Blog Content</label>
          <textarea name="content" id="newBlogContent" required></textarea>
        </div>
        
        <button class="ui button" type="submit">Submit</button>
      </form>

    </div>

</div>

<% include ../partials/js/default %>
<% include ../partials/js/newBlog %>
<% include ../partials/footer %>