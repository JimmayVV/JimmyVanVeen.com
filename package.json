{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "react-router build && node config/netlify-build.js",
    "build:no-fetch": "cross-env DISABLE_CONTENTFUL_RUNTIME=true react-router build && node config/netlify-build.js",
    "dev": "cross-env NODE_ENV=development node ./server/dev-server.js",
    "start": "netlify serve",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint . -c ./config/eslint.config.js",
    "lint:fix": "eslint . -c ./config/eslint.config.js --fix",
    "prepare": "husky",
    "format": "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --write .",
    "format:check": "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --check .",
    "ui:add": "npx shadcn@latest add -c ./config",
    "ui:init": "npx shadcn@latest init -c ./config",
    "ui:diff": "npx shadcn@latest diff -c ./config",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint -c ./config/eslint.config.js --fix",
      "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --write"
    ],
    "*.{json,md,mdx,css,yml,yaml}": [
      "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --write"
    ]
  },
  "dependencies": {
    "@browser-bunyan/console-formatted-stream": "^1.8.0",
    "@netlify/blobs": "^10.0.11",
    "@netlify/functions": "^4.3.0",
    "@octokit/plugin-throttling": "^11.0.2",
    "@octokit/rest": "^22.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-router/node": "^7.9.3",
    "@react-router/serve": "^7.9.4",
    "browser-bunyan": "^1.8.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentful": "^11.8.4",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.5.2",
    "isbot": "^5.1.31",
    "lucide-react": "^0.544.0",
    "nodemailer": "^7.0.9",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.0.1",
    "react-router": "^7.9.4",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-external-links": "^3.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.36.0",
    "@mjackson/node-fetch-server": "^0.7.0",
    "@netlify/vite-plugin-react-router": "^1.0.1",
    "@playwright/test": "^1.56.1",
    "@react-router/dev": "^7.9.4",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^24.7.0",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitest/ui": "^3.2.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "netlify-cli": "^23.9.1",
    "prettier": "^3.5.3",
    "react-router-devtools": "^5.1.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9",
    "vite-plugin-babel": "^1.3.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "prismjs": ">=1.30.0"
  }
}
