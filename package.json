{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "react-router build && node config/netlify-build.js",
    "dev": "cross-env NODE_ENV=development node ./server/dev-server.js",
    "start": "netlify serve",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint . -c ./config/eslint.config.js",
    "lint:fix": "eslint . -c ./config/eslint.config.js --fix",
    "prepare": "husky",
    "format": "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --write .",
    "format:check": "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --check .",
    "ui:add": "npx shadcn@latest add -c ./config",
    "ui:init": "npx shadcn@latest init -c ./config",
    "ui:diff": "npx shadcn@latest diff -c ./config"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint -c ./config/eslint.config.js --fix",
      "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --write"
    ],
    "*.{json,md,mdx,css,yml,yaml}": [
      "prettier --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore --write"
    ]
  },
  "dependencies": {
    "@netlify/functions": "^4.1.10",
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^22.0.0",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-router/node": "^7.2.0",
    "@react-router/serve": "^7.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentful": "^11.7.15",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.5.2",
    "isbot": "^5.1.23",
    "lucide-react": "^0.525.0",
    "nodemailer": "^7.0.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.0.1",
    "react-router": "^7.8.1",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-external-links": "^3.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "@mjackson/node-fetch-server": "^0.7.0",
    "@netlify/vite-plugin-react-router": "^1.0.1",
    "@react-router/dev": "^7.2.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@tailwindcss/vite": "^4.1.12",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.15.32",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.0.0-rc.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "netlify-cli": "^22.2.2",
    "prettier": "^3.5.3",
    "react-router-devtools": "^5.0.6",
    "tailwindcss": "^4.0.8",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.2.0",
    "vite-plugin-babel": "^1.3.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "overrides": {
    "prismjs": ">=1.30.0"
  }
}
